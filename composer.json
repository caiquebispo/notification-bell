{
    "name": "caiquebispo/notification-bell",
    "description": "Pacote elegante e responsivo para gerenciamento de notificações em Laravel com Livewire",
    "keywords": [
        "laravel",
        "livewire",
        "notifications",
        "bell",
        "dark-mode",
        "responsive",
        "notification-system",
        "notification-manager",
        "notification-bell",
        "laravel-notifications",
        "livewire-notifications",
        "real-time-notifications",
        "user-notifications",
        "elegant-ui",
        "tailwind",
        "alpinejs"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CaiqueBispo\\NotificationBell\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Caique Bispo",
            "email": "caiquebispo0023@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "livewire/livewire": "^3.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "CaiqueBispo\\NotificationBell\\Providers\\NotificationServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}